<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

	<definition name="t_el" template="/template.jsp">
		<put-attribute name="title" expression="${title}" />
		<put-attribute name="header" value="/header.jsp"/>
		<put-attribute name="main" expression="/view/${main}.jsp"/>
		<put-attribute name="footer" value="/footer.jsp" />
	</definition>
	
	<definition name="tw */*" template="/template.jsp">
		<put-attribute name="title" value="WildCARD" />
		<put-attribute name="header" value="/header.jsp"/>
		<put-attribute name="main" value="/{1}/{2}.jsp"/>
		<put-attribute name="footer" value="/footer.jsp" />
	</definition>
	
</tiles-definitions>